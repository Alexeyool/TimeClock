<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RelativeLayoutABM_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/set2_actionbar_backgraund" >

    <TextView
        android:id="@+id/TextViewABM_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:background="@color/set2_actionbar_backgraund"
        android:gravity="center_vertical|center_horizontal"
        android:text="@string/empty_date"
        android:textColor="@color/set2_actionbar_text"
        android:textSize="22sp" />

    <ImageButton
        android:id="@+id/imageButtonABM_settings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:background="@color/set2_actionbar_backgraund"
        android:contentDescription="@string/empty"
        android:src="@drawable/ic_action_name" />

</RelativeLayout>
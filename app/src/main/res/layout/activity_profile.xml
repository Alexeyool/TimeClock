<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/LinearLayoutAP_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/set2_main_backgraund"
    android:orientation="vertical"
    tools:context="${packageName}.${activityClass}" >

    <ListView
        android:id="@+id/listViewAP"
        android:layout_width="match_parent"
        android:layout_height="228dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_weight="0.62" >

    </ListView>

    <LinearLayout
        android:id="@+id/linearLayoutAP_buttons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" 
        android:layout_marginBottom="10dp"
        android:layout_marginTop="20dp">

        <Button
            android:id="@+id/buttonAP_add_profile"
            style="@style/button_style"
            android:layout_width="match_parent"
            android:layout_height="@dimen/button_height"
            android:layout_weight="1"
            android:layout_marginLeft="10dp"
            android:text="@string/add_profile" />

        <Button
            android:id="@+id/buttonAP_edit_profile"
            style="@style/button_style"
            android:layout_width="match_parent"
            android:layout_height="@dimen/button_height"
            android:layout_weight="1"
            android:layout_marginLeft="10dp"
            android:text="@string/edit" />

        <Button
            android:id="@+id/buttonAP_delete"
            style="@style/button_style"
            android:layout_width="match_parent"
            android:layout_height="@dimen/button_height"
            android:layout_weight="1"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:text="@string/delete" />

    </LinearLayout>

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/LinearLayoutDIE_main"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" 
    android:focusable="true"
        android:descendantFocusability="beforeDescendants"
        android:focusableInTouchMode="true">

    <TableLayout
        android:id="@+id/tableLayoutDIE"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" 
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp">

        <TableRow
            android:id="@+id/tableRowDIE_profile_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/textViewDIE_profile_name_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/profile_name" />

            <Spinner
                android:id="@+id/SpinnerDIE_profile_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>

        </TableRow>

        <TableRow
            android:id="@+id/tableRowDIE_type_of_shift"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/textViewDIE_type_of_shift_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/type" />

            <Spinner
                android:id="@+id/spinnerDIE_type_of_shift"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" 
                android:layout_weight="1"/>

        </TableRow>

        <TableRow
            android:id="@+id/tableRowDIE_day_or_hour"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/textViewDIE_day_or_hour_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/pay_per_hour_or_day" />

            <Spinner
                android:id="@+id/spinnerDIE_day_or_hour"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" 
                android:layout_weight="1"/>

        </TableRow>
    </TableLayout>

    <FrameLayout
        android:id="@+id/frameLayoutDIE"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

    </FrameLayout>
    
</LinearLayout>
